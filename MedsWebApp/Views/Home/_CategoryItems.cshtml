@model IEnumerable<MedsWebApp.ViewModels.CategoryViewModel>

@if (Model == null || Model.Count() == 0)
{
    <h5>Дані не знайдено</h5>
}
else
{
    @foreach (var category in Model)
    {
        <li>
            <h5 class="caret" id="@category.Id">@category.Name</h5>
            @*<h6 class="lead">@category.Description</h6>*@
            <div class="nested">
                <ul class="border-left border-dark"></ul>
            </div>
            <div class="d-flex justify-content-left">
                <div class="spinner-border spinner-border-sm nested" role="status" />
            </div>
        </li>
    }
}
