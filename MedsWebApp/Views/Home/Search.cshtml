@{
    ViewData["Title"] = "Пошук";
}
@model IEnumerable<MedsWebApp.ViewModels.MedicineViewModel>

<div id="result">
    @{ await Html.RenderPartialAsync("_ListOfMeds", Model); }
</div>

@if (Model != null && Model.Count() != 0 && ViewBag.Pages != null && ViewBag.Pages != 0)
{
    <div class="d-flex justify-content-center mt-4">
        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group" role="group">
                @for (int i = 0; i < ViewBag.Pages; i++)
                {
                    var currNumber = i + 1;
                    if (currNumber != ViewBag.Page)
                    {

                        <a class="btn btn-primary" href="Search?q=@ViewBag.SearchString&page=@currNumber">@currNumber</a>
                    }
                    else
                    {
                        <button type="button" class="btn btn-light" disabled>@currNumber</button>
                    }
                }
            </div>
        </div>
    </div>
}





