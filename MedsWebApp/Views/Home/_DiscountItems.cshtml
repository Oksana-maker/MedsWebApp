@model IEnumerable<MedsWebApp.ViewModels.DiscountViewModel>

@if (Model == null || Model.Count() == 0)
{
    <h5>Дані не знайдено</h5>
}
else
{
    @foreach (var discount in Model)
    {
        <li>
            <h5 class="caret" id="@discount.Id">@discount.Name</h5>
            <h6>Діє з <strong>@discount.DiscountStart.ToString("d")</strong> по <strong>@discount.DiscountEnd.ToString("d")</strong></h6>
            <h6 class="lead">@discount.Description</h6>
            <div class="nested">
                <ul class="border-left border-dark"></ul>
            </div>
            <div class="d-flex justify-content-left">
                <div class="spinner-border spinner-border-sm nested" role="status" />
            </div>
        </li>
    }
}
